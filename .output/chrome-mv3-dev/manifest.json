{
  "manifest_version": 3,
  "name": "电商图片抓取器",
  "description": "智能识别电商网站商品图片，支持批量下载和分类管理",
  "version": "1.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.taobao.com/*",
    "*://*.tmall.com/*",
    "*://*.jd.com/*",
    "*://*.amazon.com/*",
    "*://*.amazon.cn/*",
    "*://*.suning.com/*",
    "*://*.pinduoduo.com/*",
    "*://*.vip.com/*",
    "*://*.dangdang.com/*",
    "*://*.yhd.com/*",
    "http://localhost/*"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "电商图片抓取器",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}